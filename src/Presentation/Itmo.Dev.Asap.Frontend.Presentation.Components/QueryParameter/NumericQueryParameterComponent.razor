@namespace Itmo.Dev.Asap.Frontend.Presentation.Components
@typeparam T where T : System.Numerics.INumber<T>
@using System.Globalization
@inherits QueryParameterComponent<T>

@{
    base.BuildRenderTree(__builder);
}

@code {

    protected override bool ValidateInput(string input)
    {
        return T.TryParse(input, NumberStyles.Any, null, out _);
    }

    protected override T ParseInput(string input)
    {
        T.TryParse(input, NumberStyles.Any, null, out var value);
        return value ?? default!;
    }

    protected override string ConvertToString(T value)
    {
        return value.ToString() ?? string.Empty;
    }

}